<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp" >

        <TextView
            android:id="@+id/build_competition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Build Competition"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/build_competition_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/build_competition"
            android:layout_centerHorizontal="true"
            android:onClick="createCompetition"
            android:text="Build" />

        <TextView
            android:id="@+id/finalize_competition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/build_competition_button"
            android:layout_centerHorizontal="true"
            android:text="Finalize Competition"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/finalize_competition_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/finalize_competition"
            android:layout_centerHorizontal="true"
            android:text="Finalize" />

    </RelativeLayout>

</ScrollView>